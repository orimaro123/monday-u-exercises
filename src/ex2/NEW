class PokemonClient {
  async fetchPokemon(pokemonNumber) {
    const url = "https://pokeapi.co/api/v2/pokemon/" + pokemonNumber;
    try {
      const response = await fetch(url);

      if (!response.ok) {
        throw new Error(pokemon with ID ${pokemonNumber} was not found);
      }
      const json = await response.json();
      if (json.name) {
        return json;
      }
      return new Error(pokemon with ID ${pokemonNumber} was not found); //json?.name ?? null;
    } catch (error) {
      alert(error: Fail to fetch pokemon.  reason: ${error}); // todo: ui toaster fail
      return null;
    }
  }



